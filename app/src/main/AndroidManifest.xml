<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.arisht.cubewallpaper">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SET_WALLPAPER" />
    <uses-permission android:name="android.permission.SET_WALLPAPER_HINTS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/cube2"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Main"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Splash"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Card2"
            android:label="Superhero"
            android:parentActivityName=".Main" />
        <activity
            android:name=".Card1"
            android:label="Anime"
            android:parentActivityName=".Main" />
        <activity
            android:name=".Card3"
            android:label="Game"
            android:parentActivityName=".Main" />
        <activity
            android:name=".Card4"
            android:label="Vector"
            android:parentActivityName=".Main" />
        <activity
            android:name=".SingleView"
            android:parentActivityName=".Card1" />
        <activity android:name=".AboutUs"></activity>
    </application>

</manifest>